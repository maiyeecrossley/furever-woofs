<%- include("../partials/html-head") %>
<%- include("../partials/nav") %>

    <h1>Add a new dog</h1>

    <form class="dog-form" action="/new" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name"><br>

        <label for="dob">Date of Birth:</label>
        <input type="date" name="dob" id="dob">

        <fieldset>
            <legend>Breed:</legend>
            <div class="checkbox-group">
            <% Object.entries(dogBreeds).forEach(([key, value]) => { %>
                <% const formattedValue = value.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' '); %>
                <div class="checkbox-item">
                <input type="checkbox" name="breed" id="breed_<%= key %>" value="<%= formattedValue %>"> 
                <label for="breed_<%= key %>"><%= formattedValue %></label><br>
                </div>
            <% }); %>
            </div>
        </fieldset>

        <fieldset>
            <legend>Gender:</legend>
            <div class="radio-group">
                <div class="radio-item">
                <input type="radio" name="gender" id="male" value="Male">
                <label for="male">Male</label>
                </div>

                <div class="radio-item">
                <input type="radio" name="gender" id="female" value="Female">
                <label for="female">Female</label>
                </div>
            </div>
        </fieldset>
    
        <fieldset>
            <legend>Can live with:</legend>
    
            <div class="radio-group">
                <div class="radio-item">
                    <label>Cats:</label>
                    <input type="radio" name="live_with_cats" id="cats_yes" value="true">
                    <label for="cats_yes">Yes</label>
                    <input type="radio" name="live_with_cats" id="cats_no" value="false">
                    <label for="cats_no">No</label>
                </div>
            </div>
            <div class="radio-group">
                <div class="radio-item">
                    <label>Dogs:</label>
                    <input type="radio" name="live_with_dogs" id="dogs_yes" value="true">
                    <label for="dogs_yes">Yes</label>
                    <input type="radio" name="live_with_dogs" id="dogs_no" value="false">
                    <label for="dogs_no">No</label>
                </div>
            </div>
            <div class="radio-group">
                <div class="radio-item">
                    <label>Children:</label>
                    <input type="radio" name="live_with_children" id="children_yes" value="true">
                    <label for="children_yes">Yes</label>
                    <input type="radio" name="live_with_children" id="children_no" value="false">
                    <label for="children_no">No</label>
                </div>
            </div>
        </fieldset>
        
        <label for="location">Location:</label>
        <input type="text" name="location" id="location"><br>

        <label for="description">Description:</label><br>
        <textarea name="description" rows="10" id="description"></textarea>

    <button type="submit">Submit</button>
    </form>

</body>
</html>
