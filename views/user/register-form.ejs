<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

    <h1>Register for an account</h1>

        <form class="form" action="/register-form" method="POST">
            <label for="name">First Name:</label>
            <input type="text" name="first_name" id="first_name">
            <label for="name">Last Name:</label>
            <input type="text" name="last_name" id="last_name">
            <label for="dob">Date of Birth:</label>
            <input type="date" name="dob" id="dob">
            <label for="email">Email:</label>
            <input type="text" name="email" id="email">
            <label for="password">Password:</label>
            <input type="password" name="password" id="password">
            
            <label for="location">City Location:</label>
            <input type="text" name="location" id="location">
            <label for="telephone">Telephone:</label>
            <input type="number" name="telephone" id="telephone">

            <input type="hidden" name="user_type" value="<%= is_charity %>">
            <% if(is_charity){ %>
                
                <label for="charity_name">Charity Name:</label>
                <input type="text" name="charity_name" id="charity_name">
                <label for="charity_number">Charity Number:</label>
                <input type="number" name="charity_number" id="charity_number">
             <% } %>

            <button type="submit">Register</button>
        </form>


</body>
</html>

